@model jeudontonestlehero.Core.Data.Models.Answer

@{
    ViewData["Title"] = "Add";

    List<jeudontonestlehero.Core.Data.Models.Question> list = null;

    list = ViewBag.questionList;

    var listItems = list.Select(item => new SelectListItem() { Text = item.Title, Value = item.Id.ToString() });
}

<h1>Add</h1>

<h4>Answer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Proposition" class="control-label"></label>
                <input asp-for="Proposition" class="form-control" />
                <span asp-validation-for="Proposition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuestionId" class="control-label"></label>
                <select asp-for="QuestionId" class ="form-control" asp-items="listItems"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

